{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true,
		"node": true,
		"jest": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": 2016
    },
    "plugins": ["prettier", "jest"],
    "rules": {
        "indent": [
            "error",
            2,
            {"SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "prettier/prettier": ["error"],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}